<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarcadastroanimal"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent" app:navigationIcon="@drawable/ic_arrowback"
                app:title="Cadastro animal" app:titleTextColor="#f8f8f8">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".FormularioCadastroAnimais">

        <ImageView
                android:layout_width="125dp"
                android:layout_height="77dp" app:srcCompat="@drawable/uploadicon"
                android:id="@+id/imagemanimal"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="143dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="143dp"/>
        <TextView
                android:text=" "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" android:textSize="23sp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="68dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="127dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.0" tools:text="Foto do animal (se possuir):"/>
        <android.support.design.widget.TextInputLayout
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/imagemanimal" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/textInputLayout8">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tipo de animal" android:id="@+id/tipoanimal"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout8"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/textInputLayout9">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome para contato" android:id="@+id/nomecontato"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout9"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/textInputLayout10">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Telefone para contato" android:id="@+id/telefonecontato"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout10"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/textInputLayout11">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Descrição do animal" android:id="@+id/descricaoanimal"/>
        </android.support.design.widget.TextInputLayout>
        <Button
                android:text="Cadastrar animal"
                android:layout_width="196dp"
                android:layout_height="55dp"
                android:id="@+id/btncadastraranimal"
                style="@style/Widget.AppCompat.Button.Colored"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout11"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="161dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="162dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>