<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="251dp"
            android:layout_height="54dp"
            android:text="@string/descricaoapp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.069"
            android:id="@+id/textView6"/>
    <Button
            android:text="Cadastrar  pessoas desaparecidas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btncadastropessoa"
            style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp" android:layout_marginTop="78dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:layout_marginBottom="104dp"
            app:layout_constraintBottom_toTopOf="@+id/btncadastroanimais"/>
    <Button
            android:text="Cadastrar animais desapareciso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btncadastroanimais"
            style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="57dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="57dp"
            android:layout_marginBottom="232dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>